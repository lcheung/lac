	public class SearchResult {
		
		public var score:Number;
		public var entry:GestureDictionaryEntry;
		
		function SearchResult() {
			score = 0;
		}
		
		function toString():String {
			return "[SearchResult entryID="+entry.id+" score="+score+"]";
		}
		
	}
	
